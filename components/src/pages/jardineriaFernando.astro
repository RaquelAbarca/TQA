---
import BarraNavegacion from '../components/BarraNavegacion.astro';
import ServicioLayout from '../layouts/ServicioLayout.astro';
import TodosLosServicios from '../components/Servicios/TodosLosServicios.astro';
const pageTitle = "Trabajos Que Ayudan";
---
<ServicioLayout pageTitle={pageTitle}>
  <!DOCTYPE html>
<html>

<head>
    <title>Perfil del Proveedor</title>
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>

<body>
    <div class="container">
        <div class="profile">
          <img src="https://st4.depositphotos.com/1017986/39200/i/450/depositphotos_392006782-stock-photo-happy-man-in-apron-at.jpg" alt="Benefit 2" class="imagen-cuadro-servicio">
            <h1>Nombre del Proveedor</h1>
            <p>Descripción breve del proveedor.</p>
        </div>
        <div class="info">
            <h2>Información de Contacto</h2>
            <ul>
                <li><strong>Correo electrónico:</strong> proveedor@example.com</li>
                <li><strong>Teléfono:</strong> 1234567890</li>
                <li><strong>Dirección:</strong> Calle 123, Ciudad, País</li>
            </ul>
        </div>
    </div>
</body>

<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 600px;
    margin: 50px auto;
    padding: 20px;
    background-color: #f1f1f1;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.profile {
    text-align: center;
    margin-bottom: 20px;
}

.profile img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    object-position: center;
}

.profile h1 {
    font-size: 24px;
    margin-top: 10px;
}

.profile p {
    font-size: 16px;
    color: #666;
}

.info h2 {
    font-size: 20px;
    margin-bottom: 10px;
}

.info ul {
    list-style-type: none;
    padding: 0;
}

.info li {
    font-size: 16px;
    color: #666;
    margin-bottom: 5px;
}

strong {
    font-weight: bold;
}

</style>
</html>
</ServicioLayout>